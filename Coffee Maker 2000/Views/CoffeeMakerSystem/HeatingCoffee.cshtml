@model Coffee_Maker_2000.Models.Coffee
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HeatingPouringCoffee</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 text-center">
                Coffee Maker 2000
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 ">
                <img class="img-responsive center-block" src="~/Content/brewing stage 1.gif" alt="Chania" width="460" height="345">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">Water is being heated</div>
        </div>
        <div class="row">
            @using (Html.BeginForm())
            {

                <div class="form-group col-sm-5">
                    <label>Choose a Coffee kind</label>
                    @Html.DropDownListFor(x => x.CoffeeBeans, new[] {
                    new SelectListItem() {Text = "Regular Coffee",
                    Value = bool.TrueString},
                    new SelectListItem() {Text = "Special Coffee",
                    Value = bool.FalseString}
                    }, "Choose an option", new { @class = "form-control" })
                </div>
                <div class="form-group  col-sm-5">
                    <label>Water</label>
                    @Html.DropDownListFor(x => x.Water, new[] {
                    new SelectListItem() {Text = "6 Cups",
                    Value = bool.TrueString},
                    new SelectListItem() {Text = "12 Cups",
                    Value = bool.FalseString}
                    }, "Choose an option", new { @class = "form-control" })
                </div>
                <div class="btn btn-success">
                    @Html.ActionLink("Press to see coffee being poured", "PouringCoffee")
                </div>

            }
        </div>

    </div>
</body>
</html>
